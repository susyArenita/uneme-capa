doctype html
html
  head
    title UNEME - CAPA
    
    script(src="javascripts/jquery-3.1.1.js")
    script(type="text/javascript" src="javascripts/materialize.min.js")
    script(src="javascripts/metodoPsico.js")
    
    
    link(rel="stylesheet" type="text/css" href="stylesheets/style.css")
    link(rel="stylesheet" type="text/css" href="stylesheets/materialize.min.css")
    link(rel="stylesheet" type="text/css" href="fonts/iconfont/material-icons.css")
      
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    
  body
        div(class="z-depth-3 col s12 m10 l10 offset-l1")
          div(class="row")
            br
            div(class="col s2 push-s1")
              img(src="images/logo.jpg" width="200" height="100" class="")
            div(class="col s6 ")
              h4(class="right green-text darken-3") UNEME - CAPA
          div(class="row")
            div(class="col s2 push-s1")
              ul(id="slide-out" class="sidenav")
                li
                  div(class="user-view")
                    div(class="background")
                      img(src="images/fondo.jpg")
                    a(href="#user")
                      img(class="circle" src="images/user_soporte.png")
                    a(href="#name")
                      span(class="black-text name") Psicologo
                    a(href="#email")
                      span(class="black-text email") prueba_Psicologo@gmail.com
                li
                  a(href="tratamientoPrincipal") Tratamiento clínico
                    i(class="material-icons") assignment_ind
                li
                  a(href="historial") Historial notas tratamiento
                    i(class="material-icons") assignment 
                li
                  a(href="tratamientoRegistro") Registro nota tratamiento
                    i(class="material-icons") subject
                li
                  a(href="egreso") Egreso
                    i(class="material-icons") assignment_turned_in
                li
                  a(href="historialEgresos") Historial egresos
                    i(class="material-icons") folder_shared
                li
                  a(href="citasP") Agendar citas
                    i(class="material-icons") event_note
                li
                  a(href="/logout/") Cerrar sesión
                    i(class="material-icons") exit_to_app
              a(href="#" data-target="slide-out" class="sidenav-trigger")
                i(class="material-icons" ) menu   
        

        div(class="row padding-top padding-bottom")
          div(class="col s6 push-s3")
            h5(class="green darken-2" class="center white-text") Egreso final del paciente
        div(class="container")
          br
          div(class="row padding-top padding-bottom")
            div(class="z-depth-1 col s12 m10 l10 offset-l1")
              div(class="row")
                form(class="col s10 push-s1 pull-s1" method="post" action="/registrarEgresoFinal")
                  div(class="row")
                    div(class="input-field col s6")
                      input(placeholder="Numero" name="NoExpediente" id="NoExpediente" type="text" class="validate" readonly value=data.inforExpediente.NumeroExpediente required)                   
                      label(for="NoExpediente") Número de expediente
                  div(class="row")
                    div(class="input-field col s12")
                      input(placeholder="Paciente" name="NombrePaciente" id="NombrePaciente" type="text" class="validate" readonly value=data.inforExpediente.nombrePaciente required)                   
                      label(for="NombrePaciente") Nombre del paciente
                  div(class="row")  
                    div(class="col s6")
                      label Tipo de egreso
                        select(name="Tipo")
                          option(value="Alta por termino") Alta por termino (con mejoría)
                          option(value="Alta por termino") Alta por termino (sin mejoría)
                          option(value="Alta por mejoria") Alta por mejoría
                    div(class="col s6")
                      label Fase
                        select(name="Fase")
                          option(value="Fase diagnostica") Fase diagnóstica
                          option(value="Tratamiento y reinsercion social") Tratamiento y reinserción social
                  div(class="row")
                    br
                    br
                    div(class="input-field col s12")
                      textarea(name="Motivo" id="Motivo" class="materialize-textarea" pattern="\\w{10,500}" required)
                      label(for="Motivo") Motivo del egreso 
                  div(class="row")
                    div(class="input-field col s12")
                      textarea(name="Resumen" id="Resumen" class="materialize-textarea" pattern="\\w{10,500}" required)
                      label(for="Resumen") Resumen
                  div(class="row")
                    div(class="input-field col s12")
                      textarea(name="Impresion" id="Impresion" class="materialize-textarea" pattern="\\w{10,500}" required)
                      label(for="Impresion") Impresión
                  div(class="row")
                    div(class="input-field col s12")
                      textarea(name="Pronostico" id="Pronostico" class="materialize-textarea" pattern="\\w{10,500}" required)
                      label(for="Pronostico") Pronóstico 
                  div(class="row")
                    div(class="input-field col s12")
                      textarea(name="Sugerencias" id="Sugerencias" class="materialize-textarea" pattern="\\w{10,500}" required)
                      label(for="Sugerencias") Sugerencias
                  div(class="row")
                    div(class="input-field col s12")
                      textarea(name="Observaciones" id="Observaciones" class="materialize-textarea" pattern="\\w{10,500}" required)
                      label(for="Observaciones") Observaciones                                    
                  div(class="row")
                    div(class="col s5 push-s6")
                      button(class="waves-effect waves-light btn rigth green darken-1" type="submit") Guardar
                    //div(class="col s5")
                      a(class="waves-effect waves-light btn right green darken-1" target="_blank" href=`/EgresoPDF/${data.inforExpediente.NumeroExpediente}`) PDF
                    div(clas="col s5 pull-s3")
                      a(class="waves-effect waves-light btn right blue-grey darken-4 ") Inicio 
    
    
        div(id="egreso_final" class="modal modal-fixed-footer")
          div(class="modal-content")
            h4 Buscar expediente
            form(onsubmit="return getEgresoFinal(this);")
              div(class="input-field z-depth-1")
                input(id="search" name="NoExpediente" type="search" requiere="true" placeholder="Ingrese el numero de expediente del paciente")
                label(class="label-icon" for="search") 
                  i(class="material-icons left") search
                                
            ul(class="collapsible" data-collapsible="accordion" id="egresoFinal_list")
          div(class="modal-footer")
            a(class="modal-close waves-effect waves-green btn-flat" data-dismiss="modal") Cerrar
            
        script.
              (function($){
                $(function(){
                $('.sidenav').sidenav();
                });
              })(jQuery);
              $(document).ready(function(){
                $('select').formSelect();
              });
              $(document).ready(function(){
                $('.modal').modal();
              });
