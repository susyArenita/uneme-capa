doctype html
html
  head
    title UNEME - CAPA
    
    script(src="javascripts/jquery-3.1.1.js")
    script(type="text/javascript" src="javascripts/materialize.min.js")
    script(src="javascripts/metodoPsico.js")
    
    
    link(rel="stylesheet" type="text/css" href="stylesheets/style.css")
    link(rel="stylesheet" type="text/css" href="stylesheets/materialize.min.css")
    link(rel="stylesheet" type="text/css" href="fonts/iconfont/material-icons.css")
      
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    
  body
        div(class="z-depth-3 col s12 m10 l10 offset-l1")
          div(class="row")
            br
            div(class="col s2 push-s1")
              img(src="images/logo.jpg" width="200" height="100" class="")
            div(class="col s6 ")
              h4(class="right green-text darken-3") UNEME - CAPA
          div(class="row")
            div(class="col s2 push-s1")
              ul(id="slide-out" class="sidenav")
                li
                  div(class="user-view")
                    div(class="background")
                      img(src="images/fondo.jpg")
                    a(href="#user")
                      img(class="circle" src="images/user_soporte.png")
                    a(href="#name")
                      span(class="black-text name") Psicologo
                    a(href="#email")
                      span(class="black-text email") prueba_psicologo@gmail.com
                li
                  a(href="tratamientoPrincipal") Tratamiento clínico
                    i(class="material-icons") assignment_ind
                li
                  a(href="historial") Historial notas tratamiento
                    i(class="material-icons") assignment 
                li
                  a(href="tratamientoRegistro") Registro nota tratamiento
                    i(class="material-icons") subject
                li
                  a(href="egreso") Egreso
                    i(class="material-icons") assignment_turned_in
                li
                  a(href="historialEgresos") Historial egresos
                    i(class="material-icons") folder_shared
                li
                  a(href="citasP") Agendar citas
                    i(class="material-icons") event_note
                li
                  a(href="/logout/") Cerrar sesión
                    i(class="material-icons") exit_to_app
              a(href="#" data-target="slide-out" class="sidenav-trigger")
                i(class="material-icons" ) menu   
        

        div(class="row padding-top padding-bottom")
          div(class="col s6 push-s3")
            h5(class="green darken-2" class="center white-text") Registrar nota de tratamiento
        div(class="container")
          br
          div(class="row padding-top padding-bottom")
            div(class="z-depth-1 col s12 m10 l10 offset-l1")
              div(class="row")
                form(class="col s10 push-s1 pull-s1" method="post" action="/registrartratamiento")
                  div(class="row")
                    div(class="col l2 m6 s2")
                      a(class="btn-floating btn-tiny waves-effect waves-light green darken-3 btn modal-trigger" data-target="expediente_tratamiento")                 
                       i(class="material-icons") search
                    div(class="input-field col s6")
                      input(placeholder="Expediente" name="NoExpediente" id="NoExpediente" type="text" class="validate" readonly required)
                      label(for="NoExpediente") Número de expediente                    
                  div(class="row")
                    div(class="input-field col s12")
                      input(placeholder="Paciente" name="Nombre" id="NombrePaciente" type="text" class="validate" readonly required)
                      label(for="NombrePaciente") Nombre del paciente
                  div(class="row")
                    div(class="input-field col s6 ")
                      input(placeholder="Edad" name="Edad" id="Edad" type="text" class="validate" readonly required)
                      label(for="Edad") Edad
                    div(class="input-field col s6")
                      input(placeholder="Sexo" name="Sexo" id="Sexo" type="text" class="validate" readonly required)
                      label(for="Sexo") Sexo
                  div(class="row")
                    //div(class="input-field col s4 ")
                      input(placeholder="aaaa/mm/dd" name="Fecha" id="Fecha" type="text" class="validate")
                      label(for="Fecha") Fecha                     
                    //div(class="input-field col s4")
                      input(name="Hora" id="Hora" type="text" class="validate")
                      label(for="Hora") Hora
                    div(class="input-field col s4 ")
                      input(name="Sesion" id="Sesion" type="text" class="validate" pattern="[1-9]{1}\\d?" required)
                      label(for="Sesion") Sesion 
                  div(class="row")
                    div(class="input-field col s12")
                       textarea(name="Resumen" id="Resumen" class="materialize-textarea" pattern="[\\w]{10,500}" required)
                       label(for="Resumen") Resumen de la nota
                  div(class="row")
                    div(class="input-field col s12")
                       textarea(name="Diagnostico" id="Diagnostico" class="materialize-textarea" pattern="\\w{10,500}" required)
                       label(for="Diagnostico") Diagnóstico
                  div(class="row")
                    div(class="input-field col s12")
                      textarea(name="Pronostico" id="Pronostico" class="materialize-textarea" pattern="\\w{10,500}" required)
                      label(for="Pronostico") Pronóstico
                  div(class="row")
                    div(class="col s4 push-s4 ")
                      button(class="waves-effect waves-light btn right green darken-1" tye="submit") Guardar nota
                    //div(class="col s3 push-s3 ")
                      a(class="waves-effect waves-light btn right green darken-1") PDF
                    div(clas="col s5 pull-s3")
                      a(class="waves-effect waves-light btn right blue-grey darken-4 ") Inicio  
    
        div(id="expediente_tratamiento" class="modal modal-fixed-footer")
          div(class="modal-content")
            h4 Buscar expediente
            form(onsubmit="return getExpediente(this);")
              div(class="input-field z-depth-1")
                input(id="search" name="NoExpediente" type="search" requiere="true" placeholder="Ingrese el numero de expediente del paciente")
                label(class="label-icon" for="search") 
                i(class="material-icons right") search
                
            ul(class="collapsible" data-collapsible="accordion" id="expediente_list")
          div(class="modal-footer")
            a(class="modal-close waves-effect waves-green btn-flat" data-dismiss="modal") Cerrar
        
        
