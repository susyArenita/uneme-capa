doctype html
html
  head
    title UNEME - CAPA
    
    script(src="javascripts/jquery-3.1.1.js")
    script(type="text/javascript" src="javascripts/materialize.min.js")
    script(src="javascripts/metodoRecepcion.js")
    
    
    link(rel="stylesheet" type="text/css" href="stylesheets/style.css")
    link(rel="stylesheet" type="text/css" href="stylesheets/materialize.min.css")
    link(rel="stylesheet" type="text/css" href="fonts/iconfont/material-icons.css")
      
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    
  body
        div(class="z-depth-3 col s12 m10 l10 offset-l1")
          div(class="row")
            br
            div(class="col s2 push-s1")
              img(src="images/logo.jpg" width="200" height="100" class="")
            div(class="col s6 ")
              h4(class="right green-text darken-3") UNEME - CAPA
          div(class="row")
            div(class="col s2 push-s1")
              ul(id="slide-out" class="sidenav")
                li
                  div(class="user-view")
                    div(class="background")
                      img(src="images/fondo.jpg")
                    a(href="#user")
                      img(class="circle" src="images/user_soporte.png")
                    a(href="#name")
                      span(class="black-text name") Recepcionista
                    a(href="#email")
                      span(class="black-text email") prueba_recepcionista@gmail.com
                li
                  a(href="citasprincipal") Ver citas
                    i(class="material-icons") event
                li
                  a(href="agendarcitas") Agendar cita
                    i(class="material-icons") event_note
                li
                  a(href="reasignar") Reasignar psicólogo
                    i(class="material-icons") low_priority
                li
                  a(href="/logout/") Cerrar sesión
                      i(class="material-icons") exit_to_app
              a(href="#" data-target="slide-out" class="sidenav-trigger")
                i(class="material-icons") menu   
        

        div(class="row padding-top padding-bottom")
          div(class="col s6 push-s3")
            h5(class="green darken-2" class="center white-text") Reasignar psicologo
        div(class="container")
          br
          div(class="row padding-top padding-bottom")
            div(class="z-depth-1 col s12 m10 l10 offset-l1")
              div(class="row")
                form(class="col s10 push-s1 pull-s1" method="post" action="/psicologo/actualizar/?_method=PUT")
                  div(class="row")
                    div(class="col l2 m6 s2")
                      a(class="btn-floating btn-tiny waves-effect waves-light green darken-3 btn modal-trigger" data-target="reasignar_psicologo")                 
                       i(class="material-icons") search
                    div(class="input-field col s6")
                      input(placeholder="Numero" name="NoExpediente" id="NoExpediente" type="text" class="validate" readonly)                   
                      label(for="NoExpediente") Número de expediente
                  div(class="row")
                    div(class="input-field col s12")
                      input(placeholder="Paciente" id="NombrePaciente" type="text" class="validate" readonly)
                      label(for="NombrePaciente") Nombre del paciente
                  div(class="row")
                    div(class="input-field col s12")
                      input(placeholder="Tratamiento" id="Tratamiento" type="text" class="validate" readonly)
                      label(for="Tratamiento") Tratamiento
                  div(class="row")
                    div(class="input-field col s6 ")
                      input(placeholder="Avances" name="Avances" id="Avances" type="text" class="validate" readonly)
                      label(for="Avances") Sesion(es) registradas
                    div(class="input-field col s6")
                      input(placeholder="Total de sesiones del tratamiento" id="TotalSesiones" type="text" class="validate" readonly)
                      label(for="TotalSesiones") Total de sesiones 
                  div(class="row")                    
                    div(class="input-field col s12")
                      input(placeholder="PsicologoActual" name="PsicologoActual" id="PsicologoActual" type="text" class="validate" readonly)
                      label(for="PsicologoActual") Psicólogo actual   
                  div(class="row")  
                    div(class="input-field col s12 m12 l5 margin-top")
                      select(name="psico")
                        each psico in psicologos
                          option(value=psico.idActor)=psico.nombreActor
                      label(for="psico") Nuevo psicologo asignado  
                    div(class="input-field col s6")
                      input(name="idPsico" id="idPsico" type="text" class="validate" style="visibility:hidden" readonly)   
                  div(class="row")
                    div(class="col s5 push-s4")
                      button(class="waves-effect waves-light btn right green darken-1" type="submit") Guardar
                    div(clas="col s5 pull-s3")
                      a(class="waves-effect waves-light btn right blue-grey darken-4 ") Inicio 
    
        div(id="reasignar_psicologo" class="modal modal-fixed-footer")
          div(class="modal-content")
            h4 Buscar expediente
            form(onsubmit="return getPsicologo(this);")
              div(class="input-field z-depth-1")
                input(id="search" name="NoExpediente" type="search" requiere="true" placeholder="Ingrese el numero de expediente del paciente")
                label(class="label-icon" for="search") 
                  i(class="material-icons left") search
                
            ul(class="collapsible" data-collapsible="accordion" id="psicologo_list")
          div(class="modal-footer")
            a(class="modal-close waves-effect waves-green btn-flat" data-dismiss="modal") Cerrar

        script.
              (function($){
                $(function(){
                $('.sidenav').sidenav();
                });
              })(jQuery);
              $(document).ready(function(){
                $('select').formSelect();
              });
              $(document).ready(function(){
                $('.modal').modal();
              });
          
          
